    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value16"
        android:layout_marginTop="@dimen/value15"
        android:layout_marginEnd="@dimen/value16"
        android:background="@drawable/button_rectangle_accent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/value10" android:tag="layout/list_navigate_item_mvvm_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            style="@style/HorizontalLinearLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/value10"
            tools:ignore="ExtraText">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/statusCircleImageView"
                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:tag="binding_1"                                                                                         
                style="@style/CardStatusImageView" />
            <ImageView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:tint="@color/black"
                android:padding="@dimen/margin40"
                android:src="@android:drawable/presence_video_busy"
                android:tag="binding_2"                                                                                         
            android:layout_centerInParent="true" />
<!--            <com.github.abdularis.piv.VerticalScrollParallaxImageView-->
<!--                android:id="@+id/statusCircleImageView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="170dp"-->
